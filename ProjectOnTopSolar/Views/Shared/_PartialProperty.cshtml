@model ProjectOnTopSolar.ViewModels.SecondIndexViewModel

@{

    var Property = new List<SelectListItem>
    {
    new SelectListItem { Text = "House", Value = "1", Selected = true },
    new SelectListItem { Text = "Detached House", Value = "2", Selected = true },
    new SelectListItem { Text = "Semi-Detached House", Value = "3", Selected = true },
    new SelectListItem { Text = "Terraced House", Value = "4", Selected = true },
    new SelectListItem { Text = "Residential Home", Value = "5", Selected = true },
    new SelectListItem { Text = "Flat or Apartment", Value = "6", Selected = true },
    new SelectListItem { Text = "Bungalow", Value = "7", Selected = true },
    new SelectListItem { Text = "Commercial Premises", Value = "8", Selected = true },
    new SelectListItem { Text = "Not Sure", Value = "9", Selected = true }};
    ViewBag.Property = Property;



    var ownership = new List<SelectListItem>
    {
       new SelectListItem { Text="selected",Value="1",Selected=true},
       new SelectListItem { Text="Tenant" ,Value="2",Selected=true},
       new SelectListItem { Text="Potential Homebuyer",Value="3",Selected=true},
       new SelectListItem { Text="Landlord",Value="4",Selected=true},
       new SelectListItem { Text="Other",Value="5",Selected=true}};
    ViewBag.ownership = ownership;
    }



@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "homeForm", @novalidate = "" }))
{ 

        <h2>Go Solar & Save Money!</h2>

        <div class="form-group">
            <div class="col-xs-12 col-md-5 col-lg-5">
                @Html.LabelFor(m => m.PropertyViewModel.PropertyType)
                </div>
            <div class="col-xs-12 col-md-7 col-lg-7">
                @Html.DropDownListFor(m => m.PropertyViewModel.PropertyType, ViewBag.Property as List<SelectListItem>, new { @class = "form-control" })

            </div>
            <div class="clearfix"></div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-md-5 col-lg-5">
                @Html.LabelFor(m => m.PropertyViewModel.HomeOwner)
            </div>
            <div class="col-xs-12 col-md-7 col-lg-7">
                @Html.DropDownListFor(m => m.PropertyViewModel.HomeOwner, ViewBag.ownership as List<SelectListItem>, new { @class = "form-control" })
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-md-5 col-lg-5">
                @Html.LabelFor(m => m.PropertyViewModel.YourPostCode)
                </div>
            <div class="col-xs-12 col-md-7 col-lg-7">
                @Html.TextBoxFor(m => m.PropertyViewModel.YourPostCode, new { @class="form-control"})
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            <div class="col-md-12" style="padding:0;">
                <button type="submit" class="btn btn-block btn-danger">
                    Compare Now <i class="fa fa-share "></i>
                </button>
            </div>
        </div>
    
}

